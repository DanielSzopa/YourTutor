@model YourTutor.Application.Commands.Register

@{
    ViewData["Title"] = "Sign up";
}

<link rel="stylesheet" href="~/css/account/account.css" />

<h1>Become a <span class="tutor-text">Tutor</span>!</h1>

<hr />
<div class="row">
    <div class="col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <form asp-action="Register">
            @if (ViewBag.ErrorMessages is not null && ViewBag.ErrorMessages.Count > 0)
            {
                <partial name="~/Views/Account/_ErrorBannerPartial.cshtml" model='new ErrorBanner(ViewBag.ErrorMessages," Invalid Registration!!!")' />
            }
            <div class="form-group account-form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group account-form-group">
                <label asp-for="FirstName" class="form-label">First name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group account-form-group">
                <label asp-for="LastName" class="form-label">Last name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group account-form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <small id="password-small-text" class="form-text text-muted">
                    Your password must be 8-50 characters long, should contains letters, numbers and special characters
                </small>
                <span asp-validation-for="Password" class="text-danger"></span>                
            </div>
            <div class="form-group account-form-group">
                <label asp-for="PasswordConfirmation" class="form-label">Confirm your password</label>
                <input asp-for="PasswordConfirmation" class="form-control" type="password" />
                <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign up" id="sign-btn" class="btn" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
