<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YourTutor.Mvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header/header.css" />
    <link rel="stylesheet" href="~/css/footer/footer.css" />
</head>
<body>
    <header>
        <nav id="main-navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a id="logo-text" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img id="tutorIcon" src="~/img/tutorIcon.png" alt="tutorIcon" /> Your<span id="tutor-text">Tutor</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark mobile-item" asp-controller="Home" asp-action="Index"><img class="hidden-desktop" src="~/img/homeIcon.png" alt="homeIcon" /> <span>Home</span></a>
                        </li>
                    </ul>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" id="signIn" asp-controller="Account" asp-action="Login">Sign in</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" id="signUp" asp-controller="Account" asp-action="Register">Sign up as Tutor</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item" id="myaccount">
                                <div class="dropdown">
                                    <a class="nav-link text-dark  dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" asp-controller="Home" asp-action="Index">@($"{User.Identity.Name}") <img src="~/img/userIcon.png" alt="userIcon" /></a>

                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="dropdown-item text-dark" href="#">My account</a></li>
                                        <li><a class="dropdown-item text-dark" asp-controller="Account" asp-action="Logout">Sign out</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item hidden-desktop" id="myaccount-small">
                                <a class="nav-link text-dark mobile-item" asp-controller="Home" asp-action="Index"><img src="~/img/userIcon.png" alt="userIcon" /><span>My account</span></a>
                            </li>
                            <li class="nav-item hidden-desktop">
                                <a class="nav-link text-dark mobile-item" asp-controller="Account" asp-action="Logout"> <img src="~/img/logoutIcon.png" alt="logoutIcon" /><span>Sign out</span></a>
                            </li>
                        </ul>
                    }                  
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <span>&copy; 2023 - YourTutor created by <a href="https://github.com/DanielSzopa" target="_blank">Daniel Szopa</a><a href="https://github.com/DanielSzopa/YourTutor" target="_blank"><img id="github" src="~/img/github.png" alt="github" /></a></span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
