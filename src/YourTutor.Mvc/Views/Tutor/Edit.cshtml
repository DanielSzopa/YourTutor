@model YourTutor.Application.ViewModels.EditTutorVm

@{
    ViewData["Title"] = "Edit tutor";
}


<link rel="stylesheet" href="~/css/tutor/editTutor.css" />

<h1>Edit <span class="tutor-text">Tutor</span></h1>

<h4>Fill out form to edit</h4>
<hr />
<div class="row">
    <div class="col-md-12 col-lg-6 col-xl-5 col-xxl-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group edit-tutor-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group edit-tutor-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group edit-tutor-group">
                <label asp-for="Language" class="control-label"></label>
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" id="edit-btn" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <a class="btn btn-primary" id="back-btn" asp-controller="Tutor" asp-action="MyAccount">Back</a>
            </div>
        </form>
    </div>
    <div class="col-md-4 col-lg-6 col-xl-7 col-xxl-6 picture-col"><img class="tutor-picture" src="~/img/tutor/books.png" alt="books" /></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
